page {
  background-color: #e7e7e7;
}


.product-cpanli {
  width: 100%;
  margin: 0rpx auto;
  background-color: #ffffff;
}

.cpanli-nr {
  padding-top: 20rpx;
  overflow: hidden;
  width: 700rpx;
  margin: 0rpx auto;
  display: flex;
  /*设置为flex布局*/
  display: -webkit-flex;
  justify-content: center;
  /*水平居中*/
}

.cpanli-nr-li {
  float: left;
  padding-right: 20rpx;
  font-size: 28rpx;
  color: #888888;
  font-weight: 300;
  position: relative;
  height: 56rpx;
  line-height: 56rpx;
  padding-left: 20rpx;
}

.cpanli-nr-lid {
  display: none;
}

.cpanli-nr-liactive {
  color: #595757;
  /* font-size: 44rpx; */
  font-weight: 700;
}

.cpanli-nr-liactive .cpanli-nr-lid {
  display: none;
  position: absolute;
  right: 24rpx;
  top: 5rpx;
  height: 13rpx;
  width: 13rpx;
  border-radius: 50%;
  background-color: #C8C9CA;

}

.cpanli-nrb {
  margin-top: 27rpx;
  width: 100%;
  height: 70rpx;
  background: #DCDCDD;
  text-align: center;
  font-size: 26rpx;

}

.cpanli-nrbli {
  display: inline-block;
  line-height: 70rpx;
  padding: 0rpx 10rpx;
  font-weight: 300;
  color: #868585;
}

.cpanli-nrbli-activ {
  color: #C29562;
}

