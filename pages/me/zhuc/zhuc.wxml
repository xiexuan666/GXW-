<!-- 头部 -->
<view class="jinx-t">
	<view class="jinx-tnr">
		<view class="jinx-bei">
			<image src="https://cdn.juesedao.cn/gxw/mingpian.png"></image>
		</view>
		<view class="jinx-toux">
			<view class="toux-img">
				<image src="{{storeRecord.logo}}"></image>
			</view>
			<view class="name-p">{{storeRecord.shopowner}}</view>
		</view>
	</view>
</view>
<block wx:for='{{list}}' wx:index='index' wx:item='item'>
	<view class="me-list">
		<view class="me-list-ul">
			<view class="me-list-li" bindtap="melisttz" data-index="{{index}}">
				<view class="me-list-lil">{{item.value}}</view>
				<view class="me-list-lir">
				<!-- 性别选择框 -->
				<view wx:if='{{item.value=="性别"}}'>
					<picker range="{{sex}}" value="{{value}}" bindchange="sexCheck">
					<input name="xingm" disabled='{{true}}' bindinput="xueliinput" data-index="{{index}}" class="df_1" placeholder="{{sex[value]}}" value="{{sex[value]}}"></input>
					</picker>
				</view>
				 <!-- 生日选择框 -->
				 <view wx:elif='{{item.value =="生日"}}'>
				 	<picker class="picker" mode='date' bindchange="bindDateChange" bindcancel='pickEnd' data-index="{{index}}"  value="{{date}}" start='{{date}}' end='2500-09-01'>
						<!-- input框 -->
						<input name="xingm" bindinput="xueliinput" data-index="{{index}}" class="df_1" disabled="{{true}}" value="{{date}}"></input>	
					</picker>
					</view>
					<input name="xingm" bindinput="xueliinput" data-index="{{index}}" class="df_1" placeholder="{{item.prompt}}" wx:else></input>
				</view>
			</view>
		</view>
	</view>
</block>



<view class="anniu">
	<button bindtap="subscribe">确认提交</button>
</view>