page {
  background-color: #e7e7e7;
}

/* 头部 */
.jinx-t {
  width: 100%;
  background-color: #bababa;
}

.jinx-tnr {
  width: 100%;
  position: relative;
  height: 440rpx;
}

.jinx-bei {
  width: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 440rpx;
  overflow: hidden;
  z-index: 0;
}

.jinx-bei image {
  width: 100%;
}

.jinx-toux {
  width: 100%;

  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.toux-img {
  width: 170rpx;
  height: 170rpx;
  margin: 0 auto;
}

.toux-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.name-p {
  color: #ffffff;
  text-align: center;
  margin-top: 20rpx;
  font-size: 35rpx;
  font-weight: 300;
}

/* 头部 end*/



/* 搜索 */
.sous {
  width: 100%;
  margin-top: -40rpx;
  margin-bottom: 50rpx;

}

.sous-nr {
  width: 706rpx;
  margin: 0rpx auto;
  background: #fff;
  border-radius: 30rpx;
  height: 75rpx;
  position: relative;
  border: 1px solid #ccc;
}

.sous-nr image {
  position: absolute;
  left: 20rpx;
  top: 17rpx;
  width: 32rpx;
  height: 32rpx;
}

.sous-nr input {
  width: 600rpx;
  padding-left: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;

}






/* 订单号 */
.list {
  width: 100%;
  padding-bottom: 50rpx;
  margin: 0 auto;

}

.list-item {
  width: 85%;
  background-color: #fff;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border: 1px #fff solid;
  margin: 0 auto;
  border-radius: 25rpx;
}

.number {
  width: 100%;

}
.number1 {
  width: 100%;
  background-color: #be8f61;
  margin-top: -30rpx;
  margin-bottom: 30rpx;
  height: 50rpx;
  color: #fff;
}

.real {
  display: flex;
}


.list-item image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.list-right {
  height: 200rpx;
  margin-left: 20rpx;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}

.character {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.list-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  margin: 15rpx 0;
}

.delete {
  margin-top: 20rpx;
  width: 45%;
  border: 1px solid #be8f61;
  float: right;
  align-items: center;
  text-align: center;
  border-radius: 20rpx;
  color: #666;
}