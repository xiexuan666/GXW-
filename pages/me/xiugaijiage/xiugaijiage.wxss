.xuanz-nr{
  width: 700rpx;
  margin: 0 auto;
}
.xuanz-nr-ul{
  overflow: hidden;
}
.xuanz-nr-title{
  height: 50rpx;
  line-height: 50rpx;
  float: left;
  width: 76rpx;
  font-size: 26rpx;
