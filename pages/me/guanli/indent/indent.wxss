/* 选择框 */
.select_box {
  background: #fff;
  width: 66%;
  margin: 30rpx auto;
  position: relative;
  border-radius: 15rpx;
  border: 1px solid #ccc;
  margin-left: 188rpx;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 45rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.xil {
  padding: 0 30rpx;
  border-right: 1px solid #ccc;
}

.select_text {
  font-size: 30rpx;
  flex: 1;
  padding: 0 20rpx;
  color: #ccc;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(90deg);
}

.option_box {
  position: absolute;
  top: 72rpx;
  width: 77%;
  /* border: 1px solid #ccc; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  left: 130rpx;
  border-radius: 25rpx;
  z-index: 99;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  color: #ccc;
}