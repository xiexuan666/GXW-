/* pages/me/me.wxss */
@import '/pages/template/loginphone/loginphone.wxss';

page {
  background-color: #F7F7F7;
}


/* 头部 */
.jinx-t {
  width: 100%;
}

.jinx-tnr {
  width: 100%;
  position: relative;
  height: 440rpx;
}

.jinx-bei {
  width: 100%;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 440rpx;
  overflow: hidden;
  z-index: 0;
}

.jinx-bei image {
  width: 100%;
}

.jinx-toux {
  width: 100%;

  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.toux-img {
  width: 170rpx;
  height: 170rpx;
  margin: 0 auto;
}

.toux-img image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.name-p {
  color: #ffffff;
  text-align: center;
  margin-top: 20rpx;
  font-size: 35rpx;
  font-weight: 300;
}

/* 头部 end*/
/* 我的列表 */
.me-list {
  width: 90%;
  margin: 0 auto;
}

.me-list-ul {
  width: 100%;

}

.me-list-li {
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  margin-bottom: 3rpx;

}

.me-list-lil {
  float: left;
  position: relative;
  padding-left: 100rpx;
  line-height: 90rpx;
  color: #595757;
  font-weight: 300;
  font-size: 30rpx;
}

.me-list-lil image {
  position: absolute;
  top: 35rpx;
  left: 65rpx;
  width: 24rpx;
  height: 24rpx;
}

.me-list-lir {
  float: right;
  padding-right: 40rpx;
  padding-top: 26rpx;

}

.me-list-lir image {
  float: right;
  width: 40rpx;
  height: 40rpx;
}

/* 我的列表 end*/


/* 申请模态框 */
.shenqmot {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
  top: 0rpx;
  left: 0rpx;
}

.shenqmot-nr {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #ffffff;

}

.shenqmot-nrt {
  color: #C59A6A;
  font-size: 34rpx;
  text-align: center;
  margin-top: 34rpx;
}

.shenqmot-nrc {
  overflow: scroll;
  width: 520rpx;
  height: 600rpx;
  margin: 0 auto;
  border: 1px solid #DCDCDD;
  border-radius: 8rpx;
  padding: 10rpx;
  padding-left: 16rpx;
  margin-top: 16rpx;
  padding-bottom: 40rpx;
}

.shenqmot-nrp {
  font-size: 27rpx;
  color: #595757;
}

.shenqmot-nrb {
  width: 540rpx;
  background: #C29562;
  margin: 0 auto;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  margin-top: 26rpx;
  margin-bottom: 26rpx;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 100;
}







