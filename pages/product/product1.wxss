/* 搜索 */
.sous{
  width: 100%;
  margin-top: 27rpx;
}
.sous-nr{
  width: 706rpx;
  margin: 0rpx auto;
  background: #F3F3F1;
  border-radius: 10rpx;
  height: 60rpx;
  position: relative;
}
.sous-nr image{
  position: absolute;
  left: 20rpx;
  top: 17rpx;
  width: 32rpx;
  height:32rpx;
}
.sous-nr input{
  width: 600rpx;
  padding-left: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;
  
}




.xuanz{
  width: 100%;
  margin-top: 28rpx;
}
.xuanz-nr{
  width: 700rpx;
  margin: 0 auto;
}
.xuanz-nr-ul{
  overflow: hidden;
}
.xuanz-nr-title{
  height: 50rpx;
  line-height: 52rpx;
  float: left;
  width: 76rpx;
  font-size: 26rpx;
  padding-right: 0rpx;
  font-weight: 700;
  color: #595757;
  

} 
.xuanz-nr-scroll{
  height: 60rpx;
  float: left;
  width: 614rpx;
  overflow: hidden;
}
.xuanz-nr-li-scroll{
   width:100%;
   height: 100%;
}
.xuanz-nr-li{
  float: left;
  height: 100%;
  white-space: nowrap;

  overflow: hidden;
}
