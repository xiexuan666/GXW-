<block wx:for='{{list}}' wx:index='index' wx:item='item'>
	<view class="me-list">
		<view class="me-list-ul">
			<view class="me-list-li" bindtap="melisttz" data-index="{{index}}">
				<view class="me-list-lil">{{item.value}}</view>
				<view class="me-list-lir">
				<!-- 性别选择框 -->
				<view wx:if='{{item.value=="性别"}}'>
					<picker range="{{sex}}" value="{{value}}" bindchange="sexCheck">
					<input name="xingm" bindinput="xueliinput" data-index="{{index}}" class="df_1" placeholder="{{sex[value]}}" value="{{sex[value]}}"></input>
					</picker>
				</view>
