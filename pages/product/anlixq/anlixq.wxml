<!--pages/product/anlixq/anlixq.wxml-->

<view class="titleimg">
	<view class="header">
		<!--  index图片 -->
		<image mode="widthFix" bindtap="dakerw" data-img="{{anlixiaq.zhuye}}" src="{{pagesubscript.photo}}"></image>
	</view>
	<!-- 列表框 -->
	<view class="wenzi">
		<view class="wenzis">
			<view class="wenzis_label">标签</view>
			<!-- {{pagesubscript.type_name}} · {{pagesubscript.huxing}} -->
			{{pagesubscript.huxing}}
			<view class="wenzis_left"></view>
		</view>
		<view class="wenzis">
			<view class="wenzis_label">面积</view>
			<!-- {{pagesubscript.mianji}}㎡ -->
			{{pagesubscript.mianji}}
			<view class="wenzis_left"></view>
		</view>
		<view class="wenzis">
			<view class="wenzis_label">地区</view>
			{{pagesubscript.chengshi}}
		</view>
	</view>
</view>



<!-- 案列简介 -->
<view class="total">
	<view class="check">
		<view class="anl">
			<view class="case_round"></view>
			案列简介
		</view>
		<view class="prices">
			{{pagesubscript.case_detail}}
		</view>
		<view class="header">
			<image mode="widthFix" bindtap="dakerw" src="{{pagesubscript.photo}}"></image>
		</view>
	</view>
</view>

<block wx:for='{{anlixiaqlist}}' wx:index='index' wx:item='item' wx:if='{{anlixiaqlist.length !=0 }}'>
	<view class="total">
		<view class="check">
			<view class="anl">
				<view class="case_round"></view>
				{{item.title}}
			</view>
			<view class="prices">
				{{item.detail}}
			</view>
			<block wx:for='{{item.images}}' wx:for-item="items" wx:for-index='indexs'>
			<view class="header">
				<image mode="widthFix" bindtap="dakerw" src="{{items}}"></image>
			</view>
		</block>
		</view>
	</view>
</block>




<view class="banner" wx:if='{{productlist.length !=0 }}'>
	<view class="keting">
		<view class="chanp">
			<view class="case_round"></view>
			选用产品
		</view>
		<view class="ket">
			<block wx:for='{{productlist}}' wx:item='item' wx:index='index'>
				<view class="cizhuan">
					<image src="https://cdn.juesedao.cn/gxw/danpian.png"></image>
					<view class="lists-item">{{item.title}}</view>
				</view>
			</block>
		</view>
	</view>

</view>



<!-- 评价 -->
<view class="appraise-user">
	<view class="appraise-user_top">
		<view class="case_round"></view>
		<text>该案例评论</text>
		<view class='Top_Good'>
			<view class="Top_Good_header">
				<view class="header" wx:for="{{findAllComment}}" wx:key="index" wx:for-item="item" wx:for-index="index">

					<image src="{{item.wx_photo}}" wx:if='{{index<3}}'></image>
				</view>
			</view>
			<view class="Top_Good_Text">
				<text >{{pagesubscript.great}}人觉得很赞</text>
				<image src="/images/tubiao/dain.png" mode="widthFix"></image>
			</view>
		</view>
	</view>

	<view class="possess-layout margin-layouts">
		<view class="main" bindtap="handlepl" wx:if="{{findAllComment.length !=0}}" style="{{findAllComment.length > 5 ? 'height:460rpx' :''}}">

			<block wx:for="{{findAllComment}}" wx:key="index1" wx:for-item="item" wx:for-index="index1">
				<view class="username-appraise-top">
					<view class="username">
						<image src="{{item.wx_photo}}"></image>
						<view>{{item.wx_name}}</view>
					</view>
					<view>
						<!-- <image class="praise" src="{{item.change? '/images/tubiao/dain.png': '/images/tubiao/dianzan.png'}}" data-curindex="{{index1}}" bindtap="praiseThiss"></image> -->
						<view class="amount {{item.change? 'hover-active': ''}}">{{item.great}}</view>
					</view>
				</view>
				<view class="appraise-content">
					<view>{{item.create_time}}</view>
					<text class="pl">{{item.comment}}</text>
				</view>
			</block>

		</view>
	</view>
</view>



<!-- 底部评论 -->
<view class="appraise-btn">
	<view class="appraise-btn-left">
		<image src="/images/tubiao/pl.png"></image>
		<input placeholder="我要评论" bindinput="pingl" value="{{inputVal}}"></input>
		<button class="appraise-btn-right" bindtap="handlefa" name="liuyantext">发表</button>
	</view>
</view>



<view class="collect">
	<view class="title">
		<view class="list-item">
			<view class="list-right">
				<image src="/images/tubiao/1-10.png" mode="widthFix"></image>
				<view class="character">{{pagesubscript.preview}}</view>
			</view>
		</view>
		<view class="list-item">
			<view class="list-right" catchtap="collection" data-ind="{{index}}">
				<image wx:if='{{pagesubscript.collection}}' src="/images/tubiao/33.png" lazy-load="{{true}}"></image>
				<image wx:else src="/images/tubiao/1-13.png" lazy-load="{{true}}"></image>
				<view class="character">收藏</view>
			</view>
		</view>
		<view class="list-item" catchtap="handleToTop">
			<view class="list-right">
				<image src="/images/tubiao/1-11.png" mode="widthFix"></image>
				<view class="character">分享</view>
			</view>
		</view>
	</view>


	<!-- 分享海报 -->
	<view class="tubiaof">
		<view class="toTop">
			<view class="modals modals-bottom-dialog" hidden="{{hideModal}}">
				<view class="modals-cancel" bindtap="hideModal"></view>
				<view class="bottom-dialog-body bottom-pos" animation="{{animationData}}" catchtouchmove="return">
					<view class="erweima">
						<button class="poster" bindtap="formSubmit">
							<image src="/images/shouye/haib.png"></image>
							<text class="haib">生成海报</text>
						</button>
						<button class="poster m_l" open-type="share">
							<image src="/images/shouye/lianjie.png"></image>
							<text class="haib">分享链接</text>
						</button>
					</view>
					<view class="qux" bindtap="quxiao">取消</view>

					<view class="menus " bindtap="handlelist" data-inds="{{indexs}}">
						<view class="floor">
							<image src="{{item.product_url}}"></image>
						</view>
						<view class="content">
							<view class="left">{{item.name}}</view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</view>



<!-- foot -->
<view class="list-item6">
	<view class="goods">
		<view class="collect1">
			<image src="https://cdn.juesedao.cn/gxw/18655adabbbd420588b323d2357f1242"></image>
		</view>
		<view class="tab">

			<view class="attrs2">
				村上 家居设计师
			</view>
			<view class="attrs">
				<image src="/images/tubiao/24.png"></image> 广东省佛山市禅城区南庄镇华夏陶瓷博览城陶博二路11座
			</view>
		</view>
		<view class="contacts">
			<image src="https://cdn.juesedao.cn/gxw/yijianboda.png" bindtap="calling" catchtap="calling"></image>
			<!-- <image src="https://cdn.juesedao.cn/gxw/zixundianzhu.png"></image> -->
		</view>
	</view>
</view>

<view class="toTop" bindtap="handleToTopp">
	<image src="/images/tubiao/zhu.png"></image>
</view>


<!-- 海报位置 -->
<view class='imagePathBox' bindtap="xiaoshi" hidden="{{maskHidden == false}}">
	<view class="mask" catchtap="clearPosters"></view>
	<image src="{{imagePath}}" class='shengcheng' mode="aspectFit"></image>
	<button class='baocun' catchtap='baocun'>保存图片到相册</button>
	<button class="baocuns" open-type="share">分享到群好友</button>
</view>

<view hidden="{{maskHidden == false}}" class="mask"></view>
<view class="canvas-box">
	<canvas style="width:375px; height:667px; margin:auto;background:rgba(255,255,255);" canvas-id="canvpos" />
</view>