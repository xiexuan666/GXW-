.list{
  width: 100%;
  display: flex;
  background-color:#f7f7f7;
  border-radius: 15rpx;
  padding-top:20rpx;
  padding-bottom: 20rpx;
  color: #a7a6a6;
  margin-top:8rpx;
}
.listIcon{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
}
.listIcon .icon{
  display: block;
  width:70rpx;
  height:40rpx;
  border-radius: 15rpx;
  border: 1px solid gold;
  color: gold;
  text-align: center;
  line-height:40rpx;
}
.listIamger{
  flex:1;
  overflow: hidden;
  display: flex;
  align-items: center;
}
.listIamger image{
  height:85rpx;
  width: 85rpx;
  border-radius: 50%;
}
.listContent{
  flex: 3;
  display: flex;
  flex-direction: column;
  font-size: 22rpx;
}
.listContent .text{
  margin-top:8rpx;
  padding-right: 25rpx;
}
.listFunction{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  
}
.listFunction text{
  display: block;
  width: 100%;
  height: 50rpx;
  text-align: center;
  border-left: 1px solid #999;
  display: flex;
  justify-content: center;
  align-items: center;
}

