   width:100%;
   height: 100%;
}
.xuanz-nr-li{
  float: left;
  height: 100%;
  white-space: nowrap;
}
.xuanz-nr-li-p{
  height: 50rpx;
 
  line-height: 50rpx;
  
  font-size: 26rpx;
  margin-left: 6rpx;
  padding: 0 30rpx 0  12rpx  ;
  display: inline-block;
  font-weight: 100;
  position: relative;
  
}
.xuanz-nr-lix{
  display: none;
  position: absolute;
  top: 2rpx;
  right: 2rpx;
  width: 26rpx;
  height: 26rpx;
  text-align: center;
  line-height: 22rpx;
  background: #6a6a6a;
  border-radius: 50%;
  color: #ffffff;
  font-size: 28rpx;
}
.xp-active{
  background: #efefef;
  border-radius: 14rpx;
}
.xp-active .xuanz-nr-lix{
  display: block;
} 




