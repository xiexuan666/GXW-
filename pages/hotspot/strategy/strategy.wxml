<!-- 底部的收藏 -->
<view class="collects">
	<view class="title">
		<view class="list-item1">
			<view class="list-right">
				<image src="/images/tubiao/85.png" class="image"></image>
				<view class="character">{{strategy.great}}</view>
			</view>

		</view>
		<view class="list-item1">
			<view class="list-right" catchtap="Collection">
				<image src="/images/tubiao/1-13.png" wx:if="{{Collectionstate}}" class="image"></image>
				<image src="/images/tubiao/86.png" class="image" wx:else></image>
				<view class="character">收藏</view>
			</view>
		</view>

		<view class="list-item1">
			<view class="list-right" catchtap="handleToTop"  data-index='{{index}}'>
				<image src="/images/tubiao/87.png" class="image"></image>
				<view class="character">分享</view>
			</view>
		</view>
	</view>
	<view class="tubiaof" >
		<view class="toTop">
			<view class="modals modals-bottom-dialog" hidden="{{hideModal}}">
				<view class="modals-cancel" bindtap="hideModal"></view>
				<view class="bottom-dialog-body bottom-pos" animation="{{animationData}}" catchtouchmove="return">
					<view class="erweima">
						<button class="poster" bindtap="formSubmit">
							<image src="/images/shouye/haib.png"></image>
							<text class="haib">生成海报</text>
						</button>
						<button class="poster m_l" open-type="share">
							<image src="/images/shouye/lianjie.png"></image>
							<text class="haib">分享链接</text>
						</button>
					</view>
					<view class="qux" bindtap="quxiao">取消</view>

					<view class="menus " bindtap="handlelist" data-inds="{{indexs}}">
						<view class="floor">
							<image src="{{item.product_url}}"></image>
						</view>
						<view class="content">
							<view class="left">{{item.name}}</view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</view>


<!-- 海报位置 -->
