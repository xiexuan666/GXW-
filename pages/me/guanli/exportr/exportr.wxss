/* 店长名片 */
page {
  background-color: #e7e7e7;
}

.user {
  display: flex;
  height: 340rpx;
  width: 100%;
  position: relative;
  flex-flow: row;
  margin: 0 auto;
  position: relative;
}

.management {
  flex: 1;
  justify-content: center;
  align-items: center;
  margin: 60rpx 70rpx;
}


.user .list_pic {
  height: 100%;
  width: 100%;
  z-index: -1;
  position: absolute;

}

.user_li {
  margin-bottom: 25rpx;
}

.user_li text {
  font-size: 40rpx;
  font-weight: 700;

}

.info .info_l {
  padding: 10rpx 0;
  font-size: 26rpx;
}

.info .info_r {
  font-size: 22rpx;
  border: 1px solid #be8f61;
  color: #be8f61;
  background-color: #fff;
  padding: 11rpx;
  border-radius: 20rpx;
  width: 40%;
  text-align:center;
}


.user_info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.user_info .user_img .tx {
  height: 100rpx;
  width: 100rpx;
  margin-bottom: 110rpx;
}

.modify {
  margin-bottom: 10rpx;
  border: 1px solid black;
  padding: 10rpx;
  border-radius: 15rpx;
}

.modify .xiug {
  font-size: 26rpx;
}

/* 搜索 */
.sous {
  width: 100%;
  margin-top: 27rpx;

}

.sous-nr {
  width: 706rpx;
  margin: 0rpx auto;
  border-radius: 25rpx;
  height: 65rpx;
  position: relative;
  border: 1px solid #ccc;
  background-color: #fff;
}

.sous-nr image {
  position: absolute;
  left: 20rpx;
  top: 17rpx;
  width: 32rpx;
  height: 32rpx;
}

.sous-nr input {
  width: 600rpx;
  padding-left: 70rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 25rpx;

}





/* 我的订单 */
.list {
  width: 95%;
  margin: 50rpx auto;
}

.link {
  margin: 30rpx auto;
}

.number {
  background-color: #be8f61;
  color: #fff;
  padding: 15rpx;
}

.number1 {
  font-size: 31rpx;
  font-weight: 700;
}

.list-right {
  padding-bottom: 38rpx;
  margin-top: 10rpx;
  margin: 0 auto;
  padding: 20rpx 0;
  background-color: #fff;
  border-bottom-left-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
  padding: 20rpx;
  font-size: 28rpx;
  font-weight: 300;
}

.export {
  display: flex;
  align-items: center;
  margin-left: 50rpx;
}


.characters {
  margin: 20rpx 0;
}


.delete {
  border: 1px solid #be8f61;
  border-radius: 15rpx;
  padding: 10rpx;
  margin: 0 20rpx;
  font-size: 24rpx;
  width: 25%;
  text-align: center;
}