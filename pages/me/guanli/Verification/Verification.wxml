<!--pages/me/guanli/Verification/Verification.wxml-->
<view class="mingx">
	<view class="shuru">
		<input placeholder="请输入核销码" model:value='{{type}}' type="number"></input>
	</view>
	<view class="button">
		<view class="btn_one">
			<button class="sousuo_btn" bindtap="sousuo">搜索</button>

		</view>
		<view class="btn_two">
			<button class="saoma_btn" bindtap='saoma' >扫码</button>
		</view>
	</view>
	<view class="main"  wx:if='{{hidden}}'>
		<view class="myfont">
			<view class="hexiaoma">核销码：{{content.usercode}}</view>
			<view class="a">
				<view class="youxiao">有效期：</view>
				<view class="shijian">{{content.start_time}}-{{content.end_time}}
				</view>
			</view>
			<view class="dizhimax">
				<view class="address">店铺地址：</view>
				<view class="dizhi">{{content.address}}
				</view>
			</view>
		</view>
		<view class="vessel_btn">
			<button class="queren_btn" bindtap="submit">{{content.situation}}</button>
		</view>
	</view>
	<view>

	</view>
</view>