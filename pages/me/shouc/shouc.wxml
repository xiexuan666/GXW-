<view class="shouc">

	<!-- 热点视频和装修 -->
	<view class="product-cpanli">
		<view class="cpanli-nr">
			<view class="cpanli-nr-li {{cactiv==1?'cpanli-nr-liactive':''}}" data-ind="{{1}}" bindtap="canpiqieh">
				个人收藏
				<view class="cpanli-nr-lid"></view>
			</view>
			<view class="cpanli-nr-li {{cactiv==2?'cpanli-nr-liactive':''}}" data-ind="{{2}}" bindtap="canpiqieh">
				导购推送
				<view class="cpanli-nr-lid"></view>
			</view>
		</view>
	</view>



	<!-- 全部 -->
	<view class="cpxq-dh" wx:if='{{cactiv==1}}'>
		<view class="cpxq-dhnr">
			<view class="cpxq-dhul">
				<view class="cpxq-dhnrp cpxqp1 {{cpxqzt==1?'active':''}} " data-ind="{{1}}" bindtap="cpxzxz">产品</view>
				<view class="cpxq-dhnrp cpxqp2 {{cpxqzt==2?'active':''}} " data-ind="{{2}}" bindtap="cpxzxz">案例</view>
				<view class="cpxq-dhnrp cpxqp3 {{cpxqzt==3?'active':''}} " data-ind="{{3}}" bindtap="cpxzxz">攻略</view>
			</view>
		</view>
	</view>


	<view class='select_box'>
		<view class='select' catchtap='selectTap'>
			<text class="xil">系列</text>
			<text class='select_text'>{{selectData[index]}}</text>
			<image class='select_img {{show&&"select_img_rotate"}}' src='/image/gobottom.png'></image>
		</view>
		<view class='option_box' style='height:{{show?(selectData.length>5?300:selectData.length*60):0}}rpx;'>
			<text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}}</text>
		</view>
	</view>




	<!-- 产品 -->
	<view class="cpbottom-nr" wx:if='{{cactiv==1&&cpxqzt==1}}'>
		<view class="cpbottom-nrul">
			<block wx:for="{{cp}}" wx:for-index="index" wx:for-item="item" wx:key="index">
				<view class="cpbottom-nrli {{index%2==0?'zuo':''}}" bindtap="tzcpxq" data-ind="{{index}}">
					<view class="cpbottom-img">
						<image mode="aspectFit" lazy-load="{{true}}" src="{{item.product_url}}">
						</image>
					</view>
					<view class="cpbottom-bot">
						<view class="cpbottom-botp">{{item.name}}</view>
						<view class="shouc" catchtap="sccp" data-ind="{{index}}">
							<view class="shouc-p">收藏</view>
							<view class="img">
								<image wx:if="{{!item.sczt}}" src="/images/tubiao/me1.png"></image>
								<image wx:if="{{item.sczt}}" src="/images/tubiao/sc1.png"></image>
							</view>
						</view>
					</view>
				</view>
			</block>
		</view>
	</view>
	<!-- 全国案例 -->
	<view class="anlilist" wx:if='{{cactiv==1&&cpxqzt==2}}'>
		<view class="anlilist-ul">
			<block>
				<view class="anlilist-li" bindtap="anlitz" data-ind="{{index}}" data-ids="{{item.id}}">
					<view class="anlilist-liimg">
						<image mode="aspectFill" src="/images/tubiao/1-08.jpg"></image>
					</view>
					<view class="jxsnr-li-l  jxsnr-li-lsa">
						<view class="jxsnr-tubiao-tu1">
							<view class="jxsnr-li-lp">
								<image src="/images/tubiao/1-09.png"></image>
								<view class="lanbai">爵士灰</view>
							</view>
							<view class="liser">
								<view class="tubiaop">
									<view class="fenxiang">
										<image src="/images/tubiao/1-11.png"></image>
									</view>
								</view>
							</view>
						</view>
					</view>
					<view class="simple">
						<view class="simple-ul">
							<view class="simple-ul-p">[现代简约]客厅案列</view>
							<view class="simple-li">佛山280m私宅|4年落地，只为"雅奢生活"</view>
						</view>
						<view class="simple-li-r">
							<view class="cotione">
								<view class="jxsnr-li-time">广东省佛山市禅城区</view>
							</view>
							<view class="cotione1">
								<view class="jxsnr-li-r">2020.09.01</view>
							</view>
						</view>
					</view>
				</view>
			</block>
		</view>
	</view>


	<!-- 内容 -->
	<view class="list" wx:if='{{cactiv==1&&cpxqzt==3}}'>
		<block>
			<navigator url="/pages/hotspot/strategy/strategy?id=1" class="goods-list">
				<image src="/images/tubiao/1-08.jpg">
				</image>
				<view class="goods-list-right">
					<view class="goods-title">
						[爆款推荐]这个夏天，冠星王瓷砖让
						你体验不—样的清凉。
					</view>
					<view class="simple-li-r2">
						<view class="cotione">
							<view class="jxsnr-li-time">5220</view>
						</view>
						<view class="cotione1">
							<view class="jxsnr-li-r">2020.09.01</view>
						</view>
					</view>
				</view>
			</navigator>
		</block>
	</view>


</view>