/* pages/template/viedeocard/videocard.wxss */
.viedoLayout{
  width:90vw;
  /* background-color: blueviolet; */
  padding-left: -20rpx;
  padding-right: -20rpx;
  display: flex;
  flex-flow: wrap row;
  margin: auto;
  margin-top: 40rpx;
  /* justify-content: space-between; */
}
.viedoBody{
  height:500rpx;
  width:50%;
  transform: scale(0.9);
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow:2rpx 5rpx 15rpx #999;
  margin-bottom:80rpx;
}
.videoImage{
  height:87%;
  overflow: hidden;
  position: relative;
}
.videoImage .TitleIcon{
  position: absolute;
  top: 0;
  right: 0;
  width: 30%;
  height: 50%;
  display: flex;
  flex-flow: column;
}
.videoImage .TitleIcon .title{
  background-color: rgba(102, 102, 102, 0.692);
  padding: 5rpx;
  font-size: 26rpx;
  color: rgb(245, 245, 245);
  padding-bottom: 10rpx;
}
.videoImage .TitleIcon .icon{
  border-radius: 50rpx;
  background-color: rgb(218, 214, 214);
  height: 50rpx;
  width: 50rpx;
  margin: auto;
}
.videoImage .TitleIcon .icon image{
  height: 100%;
  width: 100%;
}
.videoImage image{
  height:100%;
  width: 100%;
  z-index: -1;
}

.tabBar{
  width: 100%;
  height: 13%;
  display: flex;
}
.tabBarImage{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tabBarImage image{
  display: block;
  border-radius: 50rpx;
  width:50%;
  height:50%;
}
.tabBarText{
  flex:2;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}
.tabBargreat{
  flex:1.5;
  display: flex;
}
.tabBargreat .icon{
  flex: 1;
  display: flex;
  align-items: center;
}
.tabBargreat .icon image{
  height:40rpx;
  width: 40rpx;
}
.tabBargreat .text{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.Info{
  height: 50rpx;
  margin-top: 20rpx;
  width:100%;
}
.Info .InfoText{
  display: flex;
  flex-flow: row;
  color: rgb(182, 181, 181);
}
.Info .InfoText text:nth-child(1){
  font-size: 28rpx;
  letter-spacing:5rpx;
  text-align: left;
}
.Info .InfoText text:nth-child(2){
  font-size: 28rpx;
  flex:2;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: left;
}
.Info .InfoLook{
  height:40rpx;
  width:100%;
  display: flex;
  flex-flow: row;
  position: relative;
  align-items: center;
  margin-top: 15rpx;
}
.Info .InfoLook image{
  height: 22rpx;
  width: 45rpx;  
  position: absolute;
  top: 50%;
  transform: translate(0%,-50%);
}
.Info .InfoLook text{
  flex:1;
  height: 40rpx;
  text-align: left;
  padding-left:60rpx;
  font-size: 24rpx;
  color: rgb(182, 181, 181);
  line-height: 35rpx;
}